{
  "name": "Albino for Pantip",
  "version": "0.99.3",
  "manifest_version": 2,
  "description": "Third party Pantip client.",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "cookies",
    "http://*.pantip.com/*",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  }
}
